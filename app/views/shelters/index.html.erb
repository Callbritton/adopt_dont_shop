<h1>All Shelters:</h1>
<a href="/shelters/new">New Shelter</a>
<% @shelters.each do |shelter| %>
  <h3><a href="/shelters/<%= shelter.id %>"><%= shelter.name %></a></h3>
  <p><%= shelter.address %> <%= shelter.city %></p>
  <p> <%= shelter.state %> <%= shelter.zip%></p>
  <a href="/shelters/<%= shelter.id  %>/edit">Update Shelter</a>
  <form action="/shelters/<%= shelter.id %>" method="POST"><br>
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <input type="hidden" name="_method" value="DELETE">
    <input type="submit" value="delete"/>
  </form>
<% end %>
